# BrowserOS Controller - Environment Configuration

# =============================================================================
# WebSocket Configuration
# =============================================================================
# The BrowserOS server connection settings

# WebSocket protocol (ws or wss)
WEBSOCKET_PROTOCOL=ws

# WebSocket server host
WEBSOCKET_HOST=localhost

# WebSocket server port
WEBSOCKET_PORT=9224

# WebSocket server path
WEBSOCKET_PATH=/controller

# =============================================================================
# WebSocket Connection Settings
# =============================================================================

# Initial reconnection delay in milliseconds
WEBSOCKET_RECONNECT_DELAY=1000

# Maximum reconnection delay in milliseconds
WEBSOCKET_MAX_RECONNECT_DELAY=30000

# Exponential backoff multiplier for reconnection
WEBSOCKET_RECONNECT_MULTIPLIER=1.5

# Maximum reconnection attempts (use 0 for infinite)
WEBSOCKET_MAX_RECONNECT_ATTEMPTS=0

# =============================================================================
# WebSocket Heartbeat Settings
# =============================================================================

# Heartbeat interval in milliseconds
WEBSOCKET_HEARTBEAT_INTERVAL=30000

# Heartbeat timeout in milliseconds
WEBSOCKET_HEARTBEAT_TIMEOUT=5000

# =============================================================================
# WebSocket Timeout Settings
# =============================================================================

# Connection timeout in milliseconds
WEBSOCKET_CONNECTION_TIMEOUT=10000

# Request timeout in milliseconds
WEBSOCKET_REQUEST_TIMEOUT=30000

# =============================================================================
# Concurrency Configuration
# =============================================================================

# Maximum number of concurrent requests
CONCURRENCY_MAX_CONCURRENT=100

# Maximum number of queued requests
CONCURRENCY_MAX_QUEUE_SIZE=1000

# =============================================================================
# Logging Configuration
# =============================================================================

# Enable/disable logging (true or false)
LOGGING_ENABLED=true

# Logging level (debug, info, warn, error)
LOGGING_LEVEL=info

# Logging prefix for all log messages
LOGGING_PREFIX=[BrowserOS Controller]
