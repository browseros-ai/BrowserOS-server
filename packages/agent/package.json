{
  "name": "@browseros/agent",
  "version": "0.1.0",
  "description": "Multi-agent WebSocket server with Claude SDK and browser automation via MCP",
  "type": "module",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "start": "bun src/index.ts",
    "test": "bun test",
    "test:unit": "bun test",
    "test:browser": "bun run scripts/tests/test-browser-automation.ts",
    "test:client": "bun run scripts/tests/test-client.ts",
    "test:multi": "bun run scripts/tests/test-multi-client.ts",
    "test:api": "bun run scripts/tests/test-api-key.ts",
    "build": "bun build src/index.ts --compile --minify --sourcemap --outfile browseros-agent-server",
    "build:all": "bun run build:linux && bun run build:macos && bun run build:windows",
    "build:linux": "bun build src/index.ts --compile --minify --target=bun-linux-x64 --outfile dist/browseros-agent-server-linux",
    "build:macos": "bun build src/index.ts --compile --minify --target=bun-darwin-arm64 --outfile dist/browseros-agent-server-macos",
    "build:windows": "bun build src/index.ts --compile --minify --target=bun-windows-x64 --outfile dist/browseros-agent-server-windows.exe",
    "clean": "rm -rf node_modules bun.lock dist browseros-agent-server"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "keywords": [
    "claude",
    "agent",
    "websocket",
    "mcp",
    "browser-automation",
    "multi-agent"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@browseros/tools": "workspace:*",
    "@browseros/common": "workspace:*",
    "@browseros/server": "workspace:*",
    "@anthropic-ai/claude-agent-sdk": "^0.1.11",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "chrome-devtools-mcp": "latest"
  }
}
